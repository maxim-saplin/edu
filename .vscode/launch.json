    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rust_exc'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_exc",
                    "--package=rust_exc"
                ],
                "filter": {
                    "name": "rust_exc",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Count_words debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rust_exc",
                    "--package=rust_exc"
                ],
                "filter": {
                    "name": "rust_exc",
                    "kind": "bin"
                }
            },
            "args": ["book.txt"],
            "cwd": "${workspaceFolder}"
        },
    ]
}